algoritmo "idade"
var
     ano_atual, ano_nasc , idade : inteiro
inicio

   escreva ( " Em que ano estamos? ")
   leia ( ano_atual)
   escreva ( " Em que ano nasci? ")
   leia (ano_nasc)
   idade <- ano_atual - ano_nasc
   escreva (" Então estou com " , idade , " anos! "  )

fimalgoritmo

